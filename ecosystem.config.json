{
  "apps": [
    {
      "name": "ui",
      "ignore_watch": [
        "coverage",
        "data",
        "govuk_modules",
        "node_modules",
        "src/internal",
        "test",
        "temp",
        "cypress",
        ".git"
      ],
      "script": "server-external.js",
      "env": {
        "watch": true
      },
      "env_production": {
        "watch": false,
        "instances" : "max",
        "exec_mode" : "cluster"
      }
    },
    {
      "name": "ui-internal",
      "ignore_watch": [
        "coverage",
        "data",
        "govuk_modules",
        "node_modules",
        "src/external",
        "test",
        "temp",
        "cypress",
        ".git"
      ],
      "script": "server-internal.js",
      "env": {
        "watch": true
      },
      "env_production": {
        "watch": false,
        "instances" : "max",
        "exec_mode" : "cluster"
      }
    }
  ]
}
