{% extends "./nunjucks/layout.njk" %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "forms/header.njk" import formHeader %}
{% from "forms/footer.njk" import formFooter %}
{% from "forms/widget.njk" import formWidget %}
{% from "./nunjucks/abstraction-reform/macros/index.njk" import wr22Condition %}

{% block content %}

  {{ formErrorSummary(form) }}

  {{ title(pageTitle) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h2 class="govuk-heading-m">{{ schema.title }} {{ schema.category }}</h2>

      {% set html = wr22Condition(data) | safe %}

      {{ govukInsetText({
        html: html
      }) }}
    </div>
  </div>

  <p>You're about to remove this further condition.</p>

  {{ formRender(form) }}

{% endblock %}
