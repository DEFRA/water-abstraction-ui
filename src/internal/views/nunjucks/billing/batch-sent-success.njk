{% extends "./nunjucks/layout.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "nunjucks/billing/macros/batch-buttons.njk" import downloadBatchButton %}


{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{
        govukPanel({
          titleText: pageTitle,
          text: panelText
        })
      }}

      <p>You can now download the bill run with bill numbers included.</p>

      {{ downloadBatchButton(batch) }}

      {% set viewLink = '/system/bill-runs/' + batch.id %}

      <p><a href="{{viewLink}}">Go to bill run</a></p>

    </div>
  </div>
{% endblock %}
