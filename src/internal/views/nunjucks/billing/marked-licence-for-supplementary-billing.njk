{% extends "./nunjucks/layout.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "./nunjucks/billing/macros/batch-buttons.njk" import createBillRun %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukPanel({
        titleText: pageTitle,
        text: panelText
      }) }}

      {{ createBillRun('Create bill run') }}
      <p>or</p>
      <p>
        {% if featureFlags.enableSystemLicenceView == true %}
          <a href="/system/licences/{{ licenceId }}/summary">Return to the licence</a>
        {% else %}
          <a href="/licences/{{ licenceId }}">Return to the licence</a>
        {% endif %}
      </p>
    </div>
  </div>
{% endblock %}
