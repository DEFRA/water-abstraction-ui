<div>
    {% if licencesCounts.toSetUp > 0 %}
        <h1 class="govuk-heading-l">To set up
            <br/>
            <span class="govuk-caption-l">
                {%if licencesCounts.toSetUp == 1 %}
                    One licence
                {% else %}
                    {{licencesCounts.toSetUp}} licences
                {% endif %}
            </span>
        </h1>
        <table class="govuk-table phone--hide">
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th class="govuk-table__header" scope="col">Licence</th>
                    <th class="govuk-table__header" scope="col">Licence holder</th>
                    <th class="govuk-table__header table__header--width-20" scope="col">Licence version <br> start date</th>
                    <th class="govuk-table__header table__header--width-20" scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for row in licences.toSetUp.data %}
                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell">{{row.licence.licenceRef}}</td>
                        <td class="govuk-table__cell">{{row.licenceHolderRole.company.name}}</td>
                        <td class="govuk-table__cell">{{row.licenceVersion.startDate | date}}</td>
                        <td class="govuk-table__cell">
                            <a href="{{row.link.href}}">{{row.link.text}}</a>
                            {% if isReviewer %}
                            | <a href="/charge-information-workflow/{{row.chargeVersionWorkflowId}}/remove">Remove</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="govuk-caption-m">
            There are no licences that require charge information setup.
        </div>
    {% endif %}
</div>
