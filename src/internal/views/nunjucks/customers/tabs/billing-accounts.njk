<table class="govuk-table">
  <caption class="govuk-table__caption govuk-heading-l">Billing accounts</caption>
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th class="govuk-table__header" scope="col">Account number</th>
      <th class="govuk-table__header" scope="col">Address</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    {% for account in invoiceAccounts %}
      <tr class="govuk-table__row">
        <td class="govuk-table__cell" scope="row">
            {% if hasPermissionToManageBillingAccounts %}
              {% if enableBillingAccountView %}
                <a href='/system/billing-accounts/{{ account.id }}?company-id={{ company.id }}'>{{ account.accountNumber }}</a>
              {% else %}
                <a href='/billing-accounts/{{ account.id }}'>{{ account.accountNumber }}</a>
              {% endif %}
            {% else %}
              {{ account.accountNumber }}
            {% endif %}
        </td>
        <td class="govuk-table__cell" scope="row">
            {% if account.currentAddress.address.addressLine1 %}
                <p class="govuk-body govuk-!-margin-bottom-0">{{ account.currentAddress.address.addressLine1 }}</p>
            {% endif %}
            {% if account.currentAddress.address.addressLine2 %}
                <p class="govuk-body govuk-!-margin-bottom-0">{{ account.currentAddress.address.addressLine2 }}</p>
            {% endif %}
            {% if account.currentAddress.address.addressLine3 %}
                <p class="govuk-body govuk-!-margin-bottom-0">{{ account.currentAddress.address.addressLine3 }}</p>
            {% endif %}
            {% if account.currentAddress.address.addressLine4 %}
                <p class="govuk-body govuk-!-margin-bottom-0">{{ account.currentAddress.address.addressLine4 }}</p>
            {% endif %}
            {% if account.currentAddress.address.town %}
                <p class="govuk-body govuk-!-margin-bottom-0">{{ account.currentAddress.address.town }}</p>
            {% endif %}
            {% if account.currentAddress.address.county %}
                <p class="govuk-body govuk-!-margin-bottom-0">{{ account.currentAddress.address.county }}</p>
            {% endif %}
            {% if account.currentAddress.address.country %}
                <p class="govuk-body govuk-!-margin-bottom-0">{{ account.currentAddress.address.country }}</p>
            {% endif %}
            {% if account.currentAddress.address.postcode %}
                <p class="govuk-body govuk-!-margin-bottom-0">{{ account.currentAddress.address.postcode }}</p>
            {% endif %}
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>
