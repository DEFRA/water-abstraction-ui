<table class="govuk-table">
  <caption class="govuk-table__caption govuk-heading-l">Billing accounts</caption>
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th class="govuk-table__header" scope="col">Account number</th>
      <th class="govuk-table__header" scope="col">Address</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    {% for account in invoiceAccounts %}
      <tr class="govuk-table__row">
        <td class="govuk-table__cell" scope="row">
            <a href='/billing-account/{{ account.id }}'>{{ account.accountNumber }}</a>
        </td>
        <td class="govuk-table__cell" scope="row">
            {{ account.currentAddress | address }}
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>
