{% extends "./nunjucks/layout.njk" %}

{% macro links(title, items) %}
  {% if items.length %}
  <h2 class="govuk-heading-m">{{ title }}</h2>

  <ul class="govuk-list">
    {% for item in items %}
    <li><a class="govuk-link" href="{{ item.path }}">{{ item.name }}</a></li>
    {% endfor %}
  </ul>
  {% endif %}
{% endmacro %}


{% block content %}
  {{ title(pageTitle) }}

  {{ links('View reports', reports )}}
  {{ links('Send licence notices', licenceNotifications )}}
  {{ links('Send return notices', returnNotifications )}}
  {{ links('Send flow notices', hofNotifications )}}
  {{ links('Manage users', accounts )}}
  {{ links('Billing', billing )}}
  {{ links('View workflow', chargeInformationWorkflow )}}
  {{ links('Upload charge information', uploadChargeInformation )}}

{% endblock %}
