{% extends "./nunjucks/layout.njk" %}

{% block content %}

  {% if waitingType === 'returns' %}
    {{ billRunDate }}
  {% endif %}
    {{ title(pageTitle) }}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body-l">{{ text | default('Please wait. This may take a few minutes.') }}</p>
        {% if statusMessage %}
          <p class="govuk-body-m">{{ statusMessage }}</p>
        {% endif %}
      </div>
    </div>
    <img class="spinner" src="/public/images/ajax-loader.gif" alt="spinner">
    <meta http-equiv="refresh" content="5">

{% endblock %}
